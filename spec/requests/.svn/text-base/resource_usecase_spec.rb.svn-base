require 'spec_helper'

describe 'the resource handler' do
  
  it 'should allow a contributor and project owner to create a new resource'
  
  it 'should allow a contributor to modify their resources only'
  
  it 'should allow a project owner to modify any resource in the project'
  
  context 'visitor is not a member' do
  	it 'should allow any visitor to download a resource'

    it 'should not allow visitor to modify a resource'

    it 'should not allow a visitor to create a new resource'
  end
  
  it 'should allow contributor and project owner to download any resource in the project'
  
end