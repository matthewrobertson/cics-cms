<div class="accordion" id="accordion1">
<div class="alert alert-block alert-error fade in">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <h4 class="alert-heading">Administrator Announcement:</h4>
            <p>A scheduled server maintenance shutdown will commence at 10:00am - 11:00am, Friday Feb, 17th
              2012.Please be advised there will be no access to ProjectBox resource management services at this time. Thanks! </p>
          </div>

      <h2>Welcome back, <%= current_user.name %> </h2>

<h3> Managed Projects </h3>
<% if @managed_projects.empty? %>

	<div class="alert alert-block fade in">
            <h4 class="alert-heading">No Projects</h4>
            <p>You can crete your own project here.</p>
            <p>
              <%= link_to "Create One", new_project_path, :class => "btn btn-create" %>
            </p>
          </div>

<% else %>


<% @managed_projects.each do |mp| %>
<div class="accordion-group">
              <div class="accordion-heading project-listing-header">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#managedCollapse<%= mp.id %>">
                 <%= mp.name %>
                </a>
              </div>
              <div id="managedCollapse<%= mp.id %>" class="accordion-body collapse" style="height: 0px; ">
                <div class="accordion-inner">
                	<table>
                		<tr>
                			<th>Contributors:</th>
                            <td><%= mp.users.count %></td>
                		</tr>
                		<tr>
                			<th>Resources:</th>
                			<td><%= mp.resources.count %></td>
                		</tr>
                	</table>

                	<%= mp.description %>
                    <p>
                    <%= link_to "View", project_path(mp), :class => "btn btn-primary" %>
                    </p>

                </div>
              </div>
            </div>
<% end %>

            <p></p>
            <p>
              <%= link_to "Create One", new_project_path, :class => "btn btn-create" %>
            </p>

<% end %>
</div>



<div class="accordion" id="accordion2">
<h3> Contributing Projects </h3>

<% if @contrib_projects.empty? %>

	<div class="alert alert-block fade in">
            
            <h4 class="alert-heading">No Contributions Found</h4>
            <p>Some helpful suggestion message</p>
            <p>
              <%= link_to "Find One", projects_path, :class => "btn btn-create" %>
            </p>
          </div>


<% else %>

<% @contrib_projects.each do |mp| %>
<div class="accordion-group">
              <div class="accordion-heading project-listing-header">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#managedCollapse<%= mp.id %>">
                 <%= mp.name %>
                </a>
              </div>
              <div id="managedCollapse<%= mp.id %>" class="accordion-body collapse" style="height: 0px; ">
                <div class="accordion-inner">
                	<table>
                		<tr>
                			<th>Contributors:</th>
                			<td><%= mp.users.count %></td>
                		</tr>
                		<tr>
                			<th>Resources:</th>
                			<td><%= mp.resources.count %></td>
                		</tr>
                	</table>

                	<%= mp.description %>
                    <p>
                    <%= link_to "View", project_path(mp), :class => "btn btn-primary" %>
                    </p>
                </div>
              </div>
            </div>
<% end %>

<% end %>
</div>
            

