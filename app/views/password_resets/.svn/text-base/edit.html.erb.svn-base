<div class ="form-horizontal project-listing-header front-signup signup">
<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>



      <fieldset>
    <legend><h3>&nbsp;Password Reset</h3></legend>
          <p> Enter your new password:</p>
</fieldset>




  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">

    <%= f.password_field :password,  :placeholder => "New Password" %>
  </div>
  <div class="field default-div">
      <p> Please confirm your password:</p>
    <%= f.password_field :password_confirmation,  :placeholder => "Confirmation " %>
  </div>

      <div class="form-actions">
<%= f.submit "Update Password", :class => 'btn btn-create signup-btn' %>
<%= link_to 'Cancel',login_path, :class => 'btn btn-primary' %>
</div>


<% end %>
    </div>