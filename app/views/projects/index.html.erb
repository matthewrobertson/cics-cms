<div class="project-view-title">
<h1>Project Database</h1>
<div>
	<form method="get" action="">
		<input type="text" name="search">
		<input class="btn btn-primary" type="submit" value="Search">
	</form>
</div>
<% if @projects %>
	<% if @projects.empty? %> 
		<p class='alert error'>Your search did not return any results, please try again</p>
	<% else %>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Members</th>
	      <th>Manager</th>
	      <th>Created</th>
	      <th>Actions</th>
	    </tr>
	  </thead>
	  <tbody>
	
		<% @projects.each do |project| %>
	       
		      <tr>
		        <td><%= link_to project.name, project_path(project) %></td>
		        <td><%= project.users.count %></td>
		        <td><%= link_to project.owner.full_name, user_path(project.owner) %></td>
		        <td><%= project.created_at.to_s(:slash_time) %></td>
		
		        <td>
		          <% if project.contributor? current_user %>
		          	<%= link_to 'Quit', "#", :class => 'btn btn-mini' %>
		          <% elsif project.pending_contributor? current_user %>
		          	<%= link_to 'Cancel', "#", :class => 'btn btn-mini' %>
		          <% else %>
		            <%= link_to 'Join', (join_project_path :user_id => current_user.id, :project_id => project.id), :class => 'btn btn-mini' %>
		          <% end %>
		
		          <% if can? :destroy, project %>
		            <%= link_to 'Delete', project_path(project), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
		          <% end %>
		        </td>
		      </tr>
		   <%end%>
		
	</tbody>
</table>
<%end%>
<% end %>
   </div>





