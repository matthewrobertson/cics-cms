<h1><%= @project.name %></h1>

<h3>Owner: <%=current_user.name  %></h3><br>

<div class="accordion" id="accordion1">
<div class="alert alert-block alert-error fade in">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <h4 class="alert-heading">Project Announcement:</h4>
   <div class="alert alert-block fade in">
	<table>
	<tr>
	<td>Project meeting scheduled on 03/27/12 at 3.30pm in ICICS Room 208. Rememeber to bring your deliverables. Meet you on 	Tuesday!</br>
	<b>Posted on:</b>03/23/2012</td>
	</tr>
	</table>
   </div>
	    <p>
              <%= link_to "Create One", new_announcement_path, :class => "btn" %>
            </p>
</div>
</div>

<p>
  <b>Description</b><br>
  <%= @project.description %>
</p>

<p>
  <b>Project Period: </b>
 <%= @project.started_at.strftime("%m/%d/%Y") %> -
  <%= @project.ending_at.strftime("%m/%d/%Y") %>
</p>

<b> Project Contributors: </b>

<% if @managed_users.empty? %>

	<div class="alert alert-block fade in">
            
            <h4 class="alert-heading">No Contributions Found</h4>
            <p>Some helpful suggestion message</p>
            <p>
              <%= link_to "Find One", users_path, :class => "btn" %>
            </p>
          </div>


<% else %>

<% @managed_users.each do |pc| %>
<div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#managedCollapse<%= pc.id %>">
                 <%= pc.name %>
                </a>
              </div>
              <div id="managedCollapse<%= pc.id %>" class="accordion-body collapse" style="height: 0px; ">
                <div class="accordion-inner">
                      	<%= pc.email %>
                
                </div>
              </div>
            </div>
<% end %>
<%= link_to "Add contributors", users_path, :class => "btn" %>
<% end %>



<p></p>
<b> Project Resources: </b>

<% if @managed_resources.empty? %>

	<div class="alert alert-block fade in">
            
            <h4 class="alert-heading">No Resource Found</h4>
            <p>Add a resource</p>
            <p>
              <%= link_to "Create One", new_project_resource_path(@project), :class => "btn" %>
            </p>
          </div>


<% else %>
<table class='table table-striped table-bordered'>
      <thead>
        <tr>
        <th>Name</th>
        <th>Owner</th>
        <th>Description</th>
        <th>Created</th>
        <th>Version</th>
        <th></th>
        </tr>
      </thead>
    <tbody>
<% @managed_resources.each do |pr| %>
    
    <tr>
        <td><%= link_to pr.name, pr %></td>
        <td><%= pr.user.name %></td>
        <td><%= truncate(pr.description, :length => 30) %></td>
        <td><%= pr.created_at.to_s(:slash_time) %></td>
        <td><%= pr.version %></td>
        <td>
          <% if pr.file.url %>
          <%= link_to "Download", pr.file.url, :class => "btn btn-mini" %>
          <% end %>
          <%= link_to "Replace", edit_resource_path(pr), :class => "btn btn-mini btn-danger" %>
        </td>
    </tr>
    
  <% end %>
  </tbody>
    </table>
  <%= link_to "Add Resources", new_project_resource_path(@project), :class => "btn" %>
<% end %>




<div class="form-actions">
  <%= link_to 'Back', user_path(@project.owner_id), :class => 'btn'  %>
  <%= link_to 'Edit', edit_project_path(@project), :class => 'btn' %>
  <%= link_to 'Delete', project_path(@project), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
