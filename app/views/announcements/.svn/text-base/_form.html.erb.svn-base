<%= simple_form_for [@project, @announcement], :html => { :class => 'form-horizontal project-listing-header front-signup signup', :multipart => true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Announcement</legend>


    <%= f.input :topic %>
    <%= f.input :content, :as => 'text' %>
    <%= f.input :kind%>

    <div class="form-actions">
     <%= f.submit nil, :class => 'btn btn-create signup-btn' %>
      <%= link_to 'Cancel', @project, :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>


